@model LocadoraDeVeiculos.Dominio.Marca

@{
    ViewBag.Title = "Cadastro de marcas";
    Layout = "~/Views/Shared/_ViewAdministrativa.cshtml";
}

<h2>Cadastro</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />

    <div class="form" style="margin:5%">
        <h4>Marca</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <thead> @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })</thead>
            <tr>
                <td>
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group" style="float:right">
                        <div>
                            <input type="submit" value="Cadastrar" class="btn take-fundo" />
                        </div>
                    </div>
                </td>
            </tr>
            <tr><td><br /></td></tr>
            <tr>
                <td>
                    <a class="btn take-fundo btn-lg" href="~/Cliente/Lista" style="float:left">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path fill-rule="evenodd" d="M8.354 11.354a.5.5 0 0 0 0-.708L5.707 8l2.647-2.646a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708 0z" />
                            <path fill-rule="evenodd" d="M11.5 8a.5.5 0 0 0-.5-.5H6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 .5-.5z" />
                        </svg>
                    </a>
                </td>
            </tr>
        </table>
    </div>
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
